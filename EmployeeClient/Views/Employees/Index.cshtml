@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- /.card -->

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">DataTable with default features</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="mb-2">
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-default" data-tooltip="tooltip" data-placement="right" title="Add Data" onclick="clearScreen()"><i class="fas fa-plus"></i></button>
                            <div class="modal fade" id="modal-default">
                                <div class="modal-dialog modal-md">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title">Default Modal</h4>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form id="quickForm">
                                                <div class="card-body">
                                                    <div class="form-group">
                                                        <label for="inputId">Employee Id</label>
                                                        <input type="text" name="empId" class="form-control" id="inputId" placeholder="Enter Employee ID">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="inputFirstName">First Name</label>
                                                        <input type="text" name="firstName" class="form-control" id="inputFirstName" placeholder="Enter First Name">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="inputLastName">Last Name</label>
                                                        <input type="text" name="lastName" class="form-control" id="inputLastName" placeholder="Enter Last Name">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="inputEmail">Email</label>
                                                        <input type="email" name="email" class="form-control" id="inputEmail" placeholder="Enter email">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="inputPhoneNumber">Phone Number</label>
                                                        <input type="text" name="phoneNumber" class="form-control" id="inputPhoneNumber" placeholder="Enter email">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="inputGender">Gender</label>
                                                        <select id="inputGender" name="gender" class="form-control">
                                                            <option value="" selected disabled>Select Gender</option>
                                                            <option value="0">Male</option>
                                                            <option value="1">Female</option>
                                                        </select>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="inputSalary">Salary</label>
                                                        <input type="number" name="salary" class="form-control" id="inputSalary" placeholder="Enter Salary">
                                                    </div>
                                                </div>
                                                <!-- /.card-body -->
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button id="Edit" class="btn btn-warning" onclick="Edit()">Edit</button>
                                            <button id="Save" type="button" class="btn btn-primary" onclick="Save()">Save</button>
                                            @*<button id="Save" type="submit" form="quickForm" class="btn btn-primary" onclick="Save()">Save</button>*@
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                    <!-- /.modal-content -->
                                </div>
                                <!-- /.modal-dialog -->
                            </div>
                        </div>
                        <table id="employeeTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Employee Id</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Email</th>
                                    <th>Phone Number</th>
                                    <th>Gender</th>
                                    <th>Salary</th>
                                    <th>Join Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

@section Script{
    <script>
        $(document).ajaxComplete(function () {
            $('[data-tooltip="tooltip"]').tooltip({
                trigger: 'hover',
            });
        });
    </script><!-- jquery-validation -->
